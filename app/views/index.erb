<head>
  <meta charset="utf-8">
  <title>Homepage</title>
</head>


<div class="index_container">
  <div class="index_summary">
    <h1> Log in to Makers BnB </h1>
    <div class="error_message">
      <% if @invalid_login %>
      <h2 style="color: red">Invalid email or password</h2><br/>
      <% end %>
    </div>
    <form action="/sessions" method="POST">
      <div class="log_in_boxes">
        <input type="email" name="email" required="true" placeholder="Email"><br/><br/>
        <input type="password" name="password" required="true" placeholder="Password"><br/><br/>
        <input type="submit" value="Login">
      </div>
    </form>
  </div>
</div>


<style>
h2 {
  font-size: 15px;
  font-style: italic;
}
.index_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  position: inherit;
}
.log_in_boxes {
  background-color: #f2f2f2;
  padding: 25px;
  border-radius: 20px;
  position: absolute;
  left: 40px;
}
.index_summary {
  padding-left: 40px;
  border-radius: 20px;
}
</style>
