</head>

<body>
  <div class="spaces_container">
    <h1>Spaces</h1>

    <ul style="list-style: none;">
      <li style="list-style: none;">
        <% @spaces.each do |space| %>
        <div class="individual_space_summary">
          <%= space.name %><br>
          Â£<%= space.price.to_i %> per night<br><br>
          <form action="/spaces/<%=space.id%>" method="get" >
            <input type="submit" value="View space">
          </form>
        </div><br><br>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="new_space_button">
    <form action="/spaces/new" method="get">
      <input type="submit" value="Add new space">
    </form>
  </div>
</body>

